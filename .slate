# Functions
alias browse move screenSizeX*0.2;screenOriginY screenSizeX*0.6;screenSizeY
alias center move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY+((screenSizeY-windowSizeY)/2) windowSizeX;windowSizeY
alias full   move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias left   move screenOriginX;screenOriginY screenSizeX*0.6;screenSizeY
alias right  move screenSizeX*0.6;screenOriginY screenSizeX*0.4;screenSizeY
alias window move screenSizeX*0.175;screenSizeY*0.125 screenSizeX*0.65;screenSizeY*0.75

# Bindings
bind c:ctrl,alt ${center} 
bind f:ctrl,alt ${full}
bind down:ctrl,alt ${window}
bind left:ctrl,alt ${left}
bind right:ctrl,alt ${right}
bind up:ctrl,alt ${browse}
